{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": ["error"],
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off",
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }]
    // "prettier/prettier": ["error", { "singleQuote": true }],
  }
}
